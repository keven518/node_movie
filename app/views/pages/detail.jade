extends ../layout

block content
  .container
    .row
      .col-md-7
        embed(src="#{movies.flash}", allowFullScreen="true", quality="hign", width="720", height="600", align="middle", type="application/x-shockwave-flash")
        .panel.panel-defatul
          .panel-heading
            h3 评论区
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                  .media-body
                    h4.media-heading #{item.from.name}
                    p #{item.content}                  
                    //-.media
                      .pull-left
                        img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                      .media-body
                        h4.media-heading Keven
                        p Really nice 
                  hr              
            form(method="POST", action="/user/comment")
              input(type='hidden', name='movieId', value='#{movies._id}')
              input(type='hidden', name='userId', value='#{user._id}')
              .form-group
                textarea.form-control(name="comment", row="3")    
              button.btn.btn-primary(type='submit') 提交
      .col-md-5
        dl.dl-horizontal
          dt 电影名称
          dd= movies.title
          dt 导演
          dd= movies.director
          dt 国家
          dd= movies.country
          dt 语言
          dd= movies.language
          dt 上映年份
          dd= movies.year
          dt 简介
          dd= movies.summary