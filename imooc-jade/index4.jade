body
  h2 流程
  h3 if else
  - var isImooc = true
  - var lessons = ['jade', 'node']
  if lessons
    if lessons.length > 2
      p more than 2: #{lessons.join(', ')}
    else if lessons.length > 1
      p more than 1: #{lessons.join(', ')}
    else
      p no lesson
  else
    p no lesson
  h3 unless
  unless !isImooc
    p #{lessons.length}
  h3 case
  - var name = 'jade_keven'
  case name
    when 'java'
    when 'node'
      p Hi node!
    when 'jade': p Hi jade!
    when 'express': p Hi express
    default
      p Hi #{name}


  h3 for
  - var kv = {course: 'jade',level: 'high'}
  - for (var k in kv)
    p= kv[k] + 'kv'
  h3 for each
  - each val, key in kv
    p #{key}: #{val}
  each val, key in kv
    p #{key}: #{val}
  h3 each遍历数组
  - var kvArr = ['kv','cmm','cw','cj','cp']
  each item in kvArr
    p= item
  h3 each 嵌套使用
  - var sections = [{id:1,items:['a','b']},{id:2,items:['c','d']}]
  dl
    each section in sections.length > 0 ? sections : [{id:0,items:['o','p']}]
      dt= section.id
      each item in section.items
        dd= item
  h3 while
  - var n = 0
  ul
    while n < 4
      li= n++
