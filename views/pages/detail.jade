extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movies.flash}", allowFullScreen="true", quality="hign", width="720", height="600", align="middle", type="application/x-shockwave-flash")
				//video(width="720", height="600" controls)
				//	source(src="#{movies.flash}" type="video/mp4")
			.col-md-5
				dl.dl-horizontal
					dt 电影名称
					dd= movies.title
					dt 导演
					dd= movies.director
					dt 国家
					dd= movies.country
					dt 语言
					dd= movies.language
					dt 上映年份
					dd= movies.year
					dt 简介
					dd= movies.summary